<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="coin.tracker.zxr.AboutMe">

    <TextView
        style="@style/HeaderText1"
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:alpha="1"
        tools:text="Coin Tracker" />

    <TextView
        style="@style/HeaderRegularText1"
        android:id="@+id/tvBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvAppName"
        android:layout_alignBottom="@+id/tvAppName"
        android:paddingLeft="8dp"
        android:layout_marginTop="@dimen/margin_top"
        android:alpha="1"
        tools:text="by" />

    <TextView
        style="@style/HeaderText2"
        android:id="@+id/tvName"
        android:layout_below="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="1"
        tools:text="Mayur Rokade" />

</RelativeLayout>
