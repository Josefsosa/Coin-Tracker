<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="fontPath">fonts/lato_bold.ttf</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SectionHeaderText">
        <item name="fontPath">fonts/lato_regular.ttf</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="XXNormalTextBold">
        <item name="fontPath">fonts/lato_bold.ttf</item>
        <item name="android:textSize">@dimen/text_xxnormal</item>
    </style>

    <style name="XXXNormalTextBold">
        <item name="fontPath">fonts/lato_bold.ttf</item>
        <item name="android:textSize">@dimen/text_xxxnormal</item>
    </style>

    <style name="ClickableText">
        <item name="fontPath">fonts/lato_regular.ttf</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    
    <style name="DeltaText">
        <item name="fontPath">fonts/lato_bold.ttf</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/colorChangeIncrement</item>
    </style>

    <style name="NormalText">
        <item name="fontPath">fonts/lato_regular.ttf</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="XNormalText">
        <item name="fontPath">fonts/lato_regular.ttf</item>
        <item name="android:textSize">@dimen/text_xnormal</item>
    </style>

    <style name="LargeFontAwesome">
        <item name="fontPath">fonts/FontAwesome.otf</item>
        <item name="android:textSize">@dimen/text_xxlarge</item>
    </style>
</resources>
